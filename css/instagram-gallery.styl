  .instagram-gallery
    padding 0 200px
    width 100%
    display flex
    justify-content space-between

    .wrapper
      width 225px
      height 225px
      position relative
      cursor pointer

      .block
        .cover
          width 100%
          height 100%

        .block-bg
          position absolute
          left 0
          bottom 0
          right 0
          top 0
          width 100%
          height 100%
          display none
          flex-direction column
          justify-content center
          align-items center

          .img-like
            margin-bottom 20px

          .count-likes
            color $white-color

        &:hover .cover
          opacity 0.3
          transition all 1s

        &:hover .img-like
          transition all 2s

      &:hover .block-bg
        display flex

      &:hover .block
        background-color rgba(0,0,0,.8)
        transition all 1s

    .bottom-row
      width 280px
      height 280px


@media (min-width: 1366px) and (max-width: 1599px)
  .instagram-gallery
    .wrapper
      width 180px
      height 180px

    .bottom-row
      width 225px
      height 225px

@media (min-width: 768px) and (max-width: 1365px)
  .instagram-gallery
    padding 0 15px

    .wrapper
      width 140px
      height 140px

    .bottom-row
      width 170px
      height 170px

