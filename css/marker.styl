 .marker
   width 100%
   text-align center
   display flex
   justify-content center
   align-items center
   padding 40px 0 40px 0

   &__text
     color $black-color
     font-size 1.5rem
     padding 0 20px

   .marker__arrow
     width 100px
     height 15px

.separator
  width 100%
  text-align center
  margin-bottom 80px

@media (min-width: 768px) and (max-width: 1365px)
  .marker
    &__text
      font-size 1.25rem

    .marker__arrow
      width 65px

  .separator
     margin-bottom 40px