 .slider
   display: flex;
   flex-direction: column;
   align-items: center;

   .slideshow-container
     width 100%
     position relative
     margin auto
     flex-direction column
     align-items center

    .slide
      display none
      width 100%

      &__description
        position absolute
        left 200px
        top 50%
        transform translateY(-50%)
        flex-direction column
        text-align center
        text-transform uppercase
        align-items center

        .description__title
          font-size 2rem
          border-bottom 1.5px solid $black-color
          width 260px
          padding-bottom 5px

        .description__sub-title
          font-size 1.25rem
          padding-top 5px

        .btn__confira
          text-transform uppercase
          background-color $transparent-color
          color $black-color
          border 1.5px solid $black-color
          font-size 1.2rem
          width 115px
          height 35px
          margin-top 40px

          &:hover, &:focus
            background-color $black-color
            color $white-color

      &-img
        width 100%
        object-fit: cover;

    .dots
      position absolute
      bottom 30px

      .dot
         cursor pointer
         height 15px
         width 15px
         margin 0 5px
         background-color $white-color
         border-radius 50%
         display inline-block
         transition background-color 0.6s ease

      .active, .dot:hover
         background-color $black-color

 .main-slider
   width 100%
   padding 0 200px
   padding-bottom 25px
   position relative

   .wrapper
     width 100%
     position relative
     overflow hidden
     margin 0 auto
     height 360px

     .carousel
       margin 0
       padding 0
       height 100%
       width 100%
       justify-content space-between
       display flex
       position absolute
       left 0
       transition all 1s ease

       .card
         width 185px
         height 100%
         margin-right 1rem
         display flex
         flex-direction column
         text-align center
         position relative
         cursor pointer
         align-items center

         &__price
           padding 5px
           font-weight bold

         .new__price, .sale
            display none

         &__img
           width 100%
           height 90%

         .card__name
           display none
           text-transform uppercase
           color $white-color
           background-color $black-color
           opacity 0.8
           height 30px
           justify-content center
           align-items center
           position absolute
           width 100%
           bottom 35px

         &:hover .card__name
            display flex



   .slider-btn
     position absolute
     top 40%
     transform translateY(-50%)
     border none
     background-color $transparent-color
     color $gray-color
     font-size 2rem

     &:hover
       color $black-color

   .btn-left
     left 160px

   .btn-right
     right 180px


 @media (min-width: 1366px) and (max-width: 1599px)
   .main-slider
     .wrapper
       height 300px

 @media (min-width: 768px) and (max-width: 1365px)
   .slider
     .slide
       &__description
         left 65px

 @media (min-width: 1024px) and (max-width: 1365px)
   .main-slider
     padding 0 100px 20px 100px

     .wrapper
       height 255px

     .btn-right
       right 78px

     .btn-left
       left 58px

 @media (min-width: 768px) and (max-width: 1023px)
   .slider
     .slide
       height 370px

       &__description
         .description__title
            font-size 1.3rem
            width 185px

         .description__sub-title
           font-size 1rem

         .btn__confira
            font-size 1rem
            width 100px
            height 30px
            margin-top: 30px;
     .dots
       .dot
          width 12px
          height 12px
          margin 0 3px

   .main-slider
     padding 0

     .wrapper
       height 335px
       overflow visible

       .carousel
         width auto

         .card
           width 155px
           position relative

           .sale
             display flex
             position absolute
             left: -6px;
             top: -21px;

           .new__price
             display flex
             font-size 1.2rem

           .card__img
             height 82%

       .carousel .card:nth-child(2n+1)
         .card__price
           color $gray-color
           text-decoration line-through;


     .slider-btn
       color $black-color

     .btn-right
        right 30px
        z-index 5

     .btn-left
       left 27px
       z-index 5


     .wrapper:before, .wrapper:after
       content:''
       display: block
       position:absolute
       top: -20px
       bottom:0
       width 100px
       box-shadow: 1px 39px 50px white;
       background: rgba(255, 255, 255, 0.62);
       z-index 3

     .wrapper:before
       right 0

     .wrapper:after
       left 0

@media (min-width: 320px) and (max-width: 425px)
  .slider
    .slide
      height 195px

      &__description
         left 17px

         .description__title
            font-size 1rem
            width 140px

         .description__sub-title
            font-size 0.8rem

         .btn__confira
           width 86px
           font-size 1rem
           margin-top 20px

    .dots
      bottom 15px

      .dot
        margin 0 3px
        border 1px solid $gray-color


  .main-slider
    padding 0

    .wrapper
      height 335px
      overflow visible

      .carousel
        width auto
        left 70%
        transform translateX(-50%)

        .card
          width 155px
          position relative

          .sale
            display flex
            position absolute
            left: -6px;
            top: -21px;

          .new__price
            display flex
            font-size 1.2rem

          .card__img
            height 82%

      .carousel .card:nth-child(2n+1)
        .card__price
          color $gray-color
          text-decoration line-through;


    .slider-btn
      display none

    .wrapper:before, .wrapper:after
      content:''
      display: block
      position:absolute
      top:0
      bottom:0
      box-shadow: 1px 39px 50px white;
      background: rgba(255, 255, 255, 0.62);
      z-index 3

    .wrapper:before
      right 0
      width 100px

    .wrapper:after
      left 0
      width 115px

@media (min-width: 320px) and (max-width: 375px)
  .main-slider
    .wrapper:before
      width 111px

    .wrapper:after
      width 85px

@media (max-width: 320px)
  .slider
    .slide
      &__description
        left 4px

        .description__title
          width 112px

        .btn__confira
          width 72px
          font-size 0.8rem

  .main-slider
    .wrapper
      &:before, &:after
        top: -22px

       .carousel
         left 77%