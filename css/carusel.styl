 .slider
   display: flex;
   flex-direction: column;
   align-items: center;

   .slideshow-container
     width 100%
     position relative
     margin auto
     flex-direction column
     align-items center

    .slide
      display none
      width 100%

      &__description
        position absolute
        left 200px
        top 50%
        transform translateY(-50%)
        flex-direction column
        text-align center
        text-transform uppercase
        align-items center

        .description__title
          font-size 2rem
          border-bottom 1.5px solid $black-color
          width 260px
          padding-bottom 5px

        .description__sub-title
          font-size 1.25rem
          padding-top 5px

        .btn__confira
          text-transform uppercase
          background-color $transparent-color
          color $black-color
          border 1.5px solid $black-color
          font-size 1.2rem
          width 115px
          height 35px
          margin-top 40px

          &:hover, &:focus
            background-color $black-color
            color $white-color

      &-img
        width 100%

    .dots
      position absolute
      bottom 30px

      .dot
         cursor pointer
         height 15px
         width 15px
         margin 0 5px
         background-color $white-color
         border-radius 50%
         display inline-block
         transition background-color 0.6s ease

      .active, .dot:hover
         background-color $black-color

 .main-slider
   width 100%
   padding 0 200px
   padding-bottom 25px
   position relative

   .wrapper
     width 100%
     position relative
     overflow hidden
     margin 0 auto
     height 360px

     .carousel
       margin 0
       padding 0
       height 100%
       width 100%
       justify-content space-between
       display flex
       position absolute
       left 0
       transition all 1s ease

       .card
         width 185px
         height 100%
         margin-right 1rem
         display flex
         flex-direction column
         text-align center
         position relative
         cursor pointer

         &__price
           padding 5px
           font-weight bold

         &__img
           width 100%
           height 90%

         .card__name
           display none
           text-transform uppercase
           color $white-color
           background-color $black-color
           opacity 0.8
           height 30px
           justify-content center
           align-items center
           position absolute
           width 100%
           bottom 35px

         &:hover .card__name
            display flex



   .slider-btn
     position absolute
     top 40%
     transform translateY(-50%)
     border none
     background-color $transparent-color
     color $gray-color
     font-size 2rem

     &:hover
       color $black-color

   .btn-left
     left 160px

   .btn-right
     right 180px




