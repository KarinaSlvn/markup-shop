.modal-menu
  display none
  position absolute
  left 0
  top 0
  background-color $white-color
  border 2px solid $black-color
  border-left none
  border-top none
  width 600px
  height 660px
  flex-direction column
  z-index 7
  .menu__header
    width 100%
    padding 0 5px 0 185px
    .header__content
      padding 0
      .header__title
        color $white-color
        text-transform uppercase
        font-size 1.25rem
      .close-modal-menu
        background $black-color
        color: $white-color
        border none
        font-size 1.7rem
  .menu-search
    width 100%
    background $gray-color
    display flex
    justify-content space-between
    height 60px
    align-items center
    .input-search
      margin-left 185px
      width 360px
      height 37px
      border none
      padding-left 15px
      font-weight bold
    .btn-search
      width 45px
      height 45px
      border none
      cursor pointer
      padding 0
      background $transparent-color
      .img-search
        width 100%
        height 100%
  .menu-content
    display flex
    flex-direction column
    width 100%
    scroll-behavior smooth

    .menu-link
      display flex
      flex-direction column
      .link-content
        width 100%
        border-bottom 2px solid $gray-color
        padding 0 30px 0 185px
        display flex
        justify-content space-between
        align-items center
        font-size 1.3rem
        text-transform uppercase
        font-weight bold
        height 70px
        .open-link
          cursor pointer
          font-size 1.7rem
    .sub-menu
      width 100%
      flex-direction column
      display none
      .sub-menu-link
        width 100%
        background $black-color
        border-bottom 1px solid $gray-color
        padding 0 30px 0 185px
        color: $white-color
        height 55px
        display flex
        justify-content space-between
        align-items center
        font-size 1.3rem
        text-transform uppercase
        font-weight bold
        .open-link
          font-size 3rem
          font-weight normal
          cursor pointer
  .menu__footer
    position absolute
    bottom 0
    background-color $white-color
    display flex
    justify-content flex-end
    padding-right 20px
    align-items center
    .footer-icons
      display flex
      .footer-icon img
        width 25px
        height 25px
        margin-right 10px



.menu-content::-webkit-scrollbar
  width 5px;
.menu-content::-webkit-scrollbar-track
  background $black-color
.menu-content::-webkit-scrollbar-thumb
  background $white-color
.menu-content::-webkit-scrollbar-thumb:hover
  background: $black-color

@media (min-width: 320px) and (max-width: 1023px)
  .modal-menu
    width 400px
    height 550px
    .menu__header
      padding 0 10px 0 25px
    .menu-search
      .input-search
        margin-left 25px
        width 315px
    .menu-content
      .menu-link
        .link-content
          padding 0 10px 0 25px
      .sub-menu
        .sub-menu-link
          padding 0 10px 0 25px



@media (min-width: 320px) and (max-width: 425px)
  .modal-menu
    width 100%
    height 550px
    border-left 2px solid $black-color
    border-top 2px solid $black-color

@media (min-width: 320px) and (max-width: 375px)
  .modal-menu
    .menu-search
      .input-search
        margin-left 5px
